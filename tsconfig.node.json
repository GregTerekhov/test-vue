{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    ".eslintrc.*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "vite/client"]
  }
}
