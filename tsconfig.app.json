{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "src/**/*.mjs"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "router/*": ["./src/router/*"],
      "services/*": ["./src/services/*"],
      "stores/*": ["./src/stores/*"],
      "views/*": ["./src/views/*"]
    }
  },
  "plugins": ["@typescript-eslint"]
}
